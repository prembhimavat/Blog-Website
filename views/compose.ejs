<%- include("./partials/header.ejs"); -%>

    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="postHead" autocomplete="off">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Post</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="postBody" placeholder="Write something here..."></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>

